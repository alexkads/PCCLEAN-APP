import { HorizontalBox } from "std-widgets.slint";

// Status Bar usando Material Design
export component StatusBar inherits HorizontalBox {
    in property <string> status: "READY";
    in property <bool> is-busy: false;
    in property <string> total-size: "0 GB";
    in property <int> total-items: 0;
    
    height: 40px;
    padding-left: 16px;
    padding-right: 16px;
    spacing: 16px;
    alignment: start;
    
    // Acessibilidade
    accessible-role: text;
    accessible-label: "Status: " + status + (total-items > 0 ? ", Total: " + total-size : "");
    
    // Status indicator
    HorizontalLayout {
        spacing: 8px;
        
        Rectangle {
            width: 8px;
            height: 8px;
            border-radius: 4px;
            background: is-busy ? #ff9800 : #4caf50;
        }
        
        Text {
            text: status;
            font-size: 13px;
            vertical-alignment: center;
            font-weight: 500;
        }
    }
    
    // Total size display
    if total-items > 0: Text {
        text: "‚Ä¢ üì¶ " + total-size;
        font-size: 13px;
        vertical-alignment: center;
    }
    
    // Total items display
    if total-items > 0: Text {
        text: "‚Ä¢ üìÅ " + total-items + " items";
        font-size: 13px;
        vertical-alignment: center;
    }
}
